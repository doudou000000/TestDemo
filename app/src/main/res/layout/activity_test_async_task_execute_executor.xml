<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testAsyncTaskExecuteExecutorBeginBtn"
        android:text="开始下载"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testAsyncTaskExecuteExecutorEndBtn"
        android:text="暂停下载"/>

    <ProgressBar
        android:id="@+id/test_async_task_execute_executor_progressbar_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:max="100" />
    <ProgressBar
        android:id="@+id/test_async_task_execute_executor_progressbar_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:max="100" />
    <ProgressBar
        android:id="@+id/test_async_task_execute_executor_progressbar_3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:max="100" />
    <ProgressBar
        android:id="@+id/test_async_task_execute_executor_progressbar_4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:max="100" />
    <ProgressBar
        android:id="@+id/test_async_task_execute_executor_progressbar_5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:max="100" />
    <ProgressBar
        android:id="@+id/test_async_task_execute_executor_progressbar_6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:max="100" />
</LinearLayout>