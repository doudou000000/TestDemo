<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="添加fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addFragmentLife"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换fragment"
        android:onClick="replaceFragmentLife"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除fragment"
        android:onClick="removeFragmentLife"/>
    <FrameLayout
        android:id="@+id/test_fragment_life_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>